    <main>
      <div class="row">
        <div class="colm-logo">
          <img src="../../public/img/logo.png" alt="Logo" style="width: 50%" />
          <h2 style="color: #87bdd8">Mabar dengan penuh gaya.</h2>
        </div>
        <div class="colm-form">
          <div class="form-container">
            <form action="/user/login" method="POST" id="loginForm">
              <input
                type="text"
                name="id"
                id="id"
                placeholder="ID Mobile Legends"
              />
              <input
                type="password"
                name="password"
                id="password"
                placeholder="Password"
              />
              <button type="submit" class="btn-login">Login</button>
            </form>
            <button class="btn-new" onclick="redirectToPageRegister()">
              Create new Account
            </button>
          </div>
        </div>
      </div>
    </main>
    <footer>
      <div class="footer-contents">
        <ol>
          <li>English (UK)</li>
          <li><a href="#">മലയാളം</a></li>
          <li><a href="#">தமிழ்</a></li>
          <li><a href="#">తెలుగు</a></li>
          <li><a href="#">বাংলা</a></li>
          <li><a href="#">اردو</a></li>
          <li><a href="#">हिन्दी</a></li>
          <li><a href="#">ಕನ್ನಡ</a></li>
          <li><a href="#">Español</a></li>
          <li><a href="#">Português (Brasil)</a></li>
          <li><a href="#">Français (France)</a></li>
          <li><button>+</button></li>
        </ol>
        <small>AntiAyam © 2023</small>
      </div>
    </footer>
    <!--end log form -->

    <script>
      function redirectToPageRegister() {
        // Ganti 'halaman_lain.html' dengan URL halaman yang ingin Anda tuju
        window.location.href = "/AntiAyam/register";
      }
      const form = document.getElementById("loginForm");
      form.addEventListener("submit", async (event) => {
        event.preventDefault();

        const formData = new FormData(form); // Buat objek FormData
        const payload = new URLSearchParams(formData);

        const response = await fetch("/user/login", {
          method: "POST",
          body: payload,
        });

        if (response.ok) {
          const data = await response.json();
          if (data.message === "Pengguna berhasil masuk") {
            // simpan response
            localStorage.setItem("username", data.user);
            // Redirect ke halaman beranda atau halaman lainnya
            window.location.href = "/AntiAyam"; //redirect ke halaman /AntiAyam
          } else if (data.message === "Admin berhasil masuk") {
            localStorage.setItem("username", data.user);
            window.location.href = "/AntiAyam/admin";
          }
        } else {
          const errorData = await response.json();
          alert("Login failed: " + errorData.message);
        }
      });
    </script>
